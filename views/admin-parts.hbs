<!DOCTYPE HTML>
<html>
<head>
    <title>Parts - Admin</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- jQuery -->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js'></script>

    <!-- SOCKETIO -->
    <script src='/socket.io/socket.io.js'></script>

    <!-- BOOTSTRAP -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

    <!-- GOOGLE FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed&display=swap" rel="stylesheet">

    <!-- STYLESHEETS -->
    <link rel='stylesheet' type='text/css' href='/css/style.css' />
    <link rel='stylesheet' type='text/css' href='/css/parts-list.css' />
    <link rel='stylesheet' type='text/css' href='/css/modals/parts-creation-modal.css' />

    <!-- SCRIPTS -->
    <script src='/js/parts-checkout.js'></script>
</head>
<body>

    <div class='wrapper'>
        <!-- NAVBAR -->
        {{> navbar }}

        <div class='banner'>
            <img src="/img/parts-checkout.png">
            <p>Hello, welcome to the parts checkout system</p>
        </div>

        <div class='checkout-container text-center'>
            <div class='checkout'>
                <h1 id='checkout-prompt'>To check out a part</h1>
                <h2>Enter Team #</h2>
                <form id='checkout-team-input'>
                    <input type="text" name="team-number">
                </form>
            </div>

            <div class='checkin'>
                <h1 id='checkin-prompt'>To check in a part</h1>
                <h2>ENTER TEAM #</h2>
                <form id='checkin-team-input'>
                    <input type="text" name="team-number">
                </form>
            </div>

        </div>

        <div id='checkout-scan' class='text-center' style="display: none;">
            <h1>You have decided to CHECK OUT a part</h1>
            <form class="barcode-form">
                <input type="text" name="barcode" placeholder="SCAN A PART">
                <div class="scan-quantity">
                    <p>If multiple of the same part,<br>enter a quantity:</p>
                    <input type="number" id="checkout-quantity" name="quantity">
                    <input type="submit" class="submit-button">
                </div>
            </form>
        </div>

        <div class='text-center' id='checkin-scan' style="display: none;">
            <h1>You have decided to CHECK IN a part</h1>
            <form class="barcode-form">
                <input type="text" name="barcode" placeholder="SCAN A PART">
                <div class="scan-quantity">
                    <p>If multiple of the same part,<br>enter a quantity:</p>
                    <input type="number" id="checkin-quantity">
                    <input type="submit" class="submit-button">
                </div>
            </form>
        </div>

        <div id='go-back' class='text-center' style="display: none">
            <p>Made a mistake?</p>
            <button id='go-back-button'>Go back</button>
        </div>

        <div class='success' id='checkout-success' style="display: none">
            <h1>Thank You</h1>
            <button id="checkout-more-items">More items to scan?</button>
            <p>Otherwise you will be redirected in 3 seconds</p>
        </div>

        <div class='success' id='checkin-success' style="display: none">
            <h1>Thank You</h1>
            <button id="checkin-more-items">More items to scan?</button>
            <p>Otherwise you will be redirected in 3 seconds</p>
        </div>
    </div>


    </div>
</body>
</html>
