<!DOCTYPE HTML>
<html>
<head>
    <title>My Parts - Dashboard</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- jQuery -->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js'></script>

    <!-- BOOTSTRAP -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

    <!-- GOOGLE FONTS -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&family=Source+Code+Pro:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- STYLESHEETS -->
    <link rel='stylesheet' type='text/css' href='/css/style.css' />
    <link rel='stylesheet' type='text/css' href='/css/dashboard-my-parts.css' />

    <!-- SCRIPTS -->
</head>
<body>

    <div class='wrapper'>
        <!-- NAVBAR -->
        {{> navbar }}

        <div class="houseline"></div>

        <div class='container text-center'>
            <h1 id="welcome">WELCOME</h1>
        </div>

        <div class="button-container">
            {{#if user.isAdmin}}
                <a href='/admin'><button class="admin">Admin</button></a>
            {{/if}}

            <a href="/settings"><button class="settings">Settings</button></a>
            <a href="/logout"><button class="logout">Log Out</button></a>
        </div>

        <div class="background theme-yellow container text-center">
            <div class="row">
                <div class="my-parts col-md-4">
                    <h1>my parts</h1>
                    <div class="labels">
                        <p>Name</p>
                        <p>Quantity</p>
                    </div>
                    <div class="text-box">
                        Hold
                    </div>
                </div>
                <div class="parts-search col-md-8">
                    <h1>parts quick search</h1>

                    <div style="height: 40px;">
                        {{> filter }}
                    </div>

                    <div class="labels">
                        <p>Name</p>
                        <p>Category</p>
                        <p>Quantity</p>
                    </div>
                    <div class="text-box">
                        Hold
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
