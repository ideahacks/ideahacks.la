<!DOCTYPE HTML>
<html>
<head>
    <title>Parts - Admin</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- jQuery -->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js'></script>

    <!-- SOCKETIO -->
    <script src='/socket.io/socket.io.js'></script>

    <!-- BOOTSTRAP -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

    <!-- GOOGLE FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600i,700" rel="stylesheet">

    <!-- STYLESHEETS -->
    <link rel='stylesheet' type='text/css' href='/css/style.css' />
    <link rel='stylesheet' type='text/css' href='/css/parts-list.css' />
    <link rel='stylesheet' type='text/css' href='/css/modals/parts-creation-modal.css' />

    <!-- SCRIPTS -->
    <script src='/js/parts-checkout.js'></script>
</head>
<body>
    <!-- NAVBAR -->
    {{> navbar }}

    <div class='banner'>
        <h1>Parts Checkout</h1>
        <p>Hello, welcome to the parts checkout system</p>
    </div>

    <div class='input-form text-center'>
        <div class='checkout'>
            <h1 id='checkout-prompt'>Check out a part</h1>
            <form id='barcode-input' style="display:none;">
                Scan the part's barcode below <br> <br>
                <input type="text" name="barcode">
                <br> <br> Enter the team # below <br> <br>
                <input type="text" name="team-number">
            </form>
        </div>
    </div>

    <div class='text-center'>
        <div class='checkin'>
            <h1 id='checkin-prompt'>Check in a part</h1>
        </div>
    </div>

    <div class='text-center'>
        <button id='in-button' style="display:none;">Check in</button>
        <button id='out-button' style="display:none;">Check out</button>
    </div>
</body>
</html>
