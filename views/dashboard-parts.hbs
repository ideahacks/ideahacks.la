<!DOCTYPE HTML>
<html>
<head>
    <title>Parts List - Dashboard</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- JQUERY -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <!-- BOOTSTRAP -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

    <!-- GOOGLE FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600i,700" rel="stylesheet">

    <!-- STYLESHEETS -->
    <link rel='stylesheet' type='text/css' href='/css/style.css' />
    <link rel='stylesheet' type='text/css' href='/css/parts-list.css' />

    <!-- SCRIPTS -->
    <script src='/js/dashboard-parts-modal.js'></script>
</head>
<body>
    <!-- NAVBAR -->
    {{> navbar }}

    <div class='container-fluid checkout-body'>

    <div class='sidebar col-md-2'>
        <p class='search-bar'>Search for a part:</p>
        {{> filter}}
        <p class='category-header'>Browse by category</p>
        <p class='part-category'>ALL</p>
        <p class='part-category filter-key'>Dev Kits</p>
        <p class='part-category filter-key'>Batteries</p>
        <p class='part-category filter-key'>Connectors</p>
        <p class='part-category filter-key'>Displays</p>
        <p class='part-category filter-key'>Interface ICs</p>
        <p class='part-category filter-key'>Sensors</p>
        <p class='part-category filter-key'>User Interfaces</p>
        <p class='part-category filter-key'>Power</p>
        <p class='part-category filter-key'>Wireless</p>
        <p class='part-category filter-key'>Discrete Semiconductors</p>
        <p class='part-category filter-key'>Electromechanical</p>
        <p class='part-category filter-key'>Discrete</p>
        <p class='part-category filter-key'>Microcontrollers</p>
        <p class='part-category filter-key'>FPGAs</p>
        <p class='part-category filter-key'>Miscellaneous</p>
    </div>

    <div class='parts-container text-center col-md-10'>
          <h1 class='parts-header'>ALL PARTS</h1>
          <p class='parts-subtitle'>Click on a part to see more detailed information</p>
    <div class='filter-list'>
          {{#each parts}}
          <div class='text-left col-md-3'>
            <div>
                <img class='part' id='{{this._id}}' src='/img/team/Ben_He.jpg' />
            </div>
            <p class='part-details filter-key text-left'>{{this.partName}}</p>
            <p class='part-details text-left'>Quantity: {{this.stock}}</p>
          </div>
          {{/each}}

    </div>

          {{> dashboardPartsModal }}
    </div>

    </div>

