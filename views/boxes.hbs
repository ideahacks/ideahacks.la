<!DOCTYPE html>
<html lang="en">
<head>
    <title>Parts List - Dashboard</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- JQUERY -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <!-- BOOTSTRAP -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

    <!-- GOOGLE FONTS -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;0,500;1,700&family=Source+Code+Pro:wght@700&display=swap" rel="stylesheet">
    <!-- STYLESHEETS -->
    <link rel='stylesheet' type='text/css' href='/css/style.css' />
    <link rel='stylesheet' type='text/css' href='/css/modal.css' />
    <link rel='stylesheet' type='text/css' href='/css/boxes.css' />

    <!-- SCRIPTS -->
    <script src='/js/boxes.js'></script>
</head>
<body>

    <div class="wrapper">
        <!-- NAVBAR -->
        {{> navbar }}

        <div class="container text-center">
            <h1 id="boxes">BOXES</h1>
        </div>

        <div id="boxes-wrapper">
            {{#each boxesData}}
                <div class="box-header text-center">
                    <div>
                        <p class="box-name" style="background-color: {{this.color}};">
                            {{this.boxName}}
                        </p>
                    </div>
                    <p class="subtitle">
                        {{this.subtitle}}
                    </p>
                </div>

                <div class="parts-wrapper row text-center">
                    {{#each this.parts}}
                        <div class="part" data-category="{{this.category}}" data-description="{{this.description}}" data-datasheet="{{this.datasheetURL}}">
                            <img src="{{this.imageURL}}" alt="{{this.partName}}" style="border-color: {{../this.color}};">
                            <p class="part-name" title="{{this.partName}}">{{this.partName}}</p>
                            <p class="quantity">Quantity: {{this.quantity}}</p>
                        </div>
                    {{/each}}
                </div>

            {{/each}}
        </div>

        <div id="part-modal" class="modal">
            <div class="modal-content">
                <div class="row">
                    <div class="part-image col-sm-4">
                        <img src="" alt="">
                    </div>
                    <div class="part-info col-sm-8">
                        <p class="name"></p>
                        <p class="quantity">
                            <span class="section">Quantity: </span><span class="content"></span>
                        </p>
                        <p class="category">
                            <span class="section">Category: </span><span class="content"></span>
                        </p>
                        <p class="description">
                            <span class="section">Description: </span><span class="content"></span>
                        </p>
                        <p class="datasheet">
                            <span class="section">Datasheet: </span><a href=""></a>
                        </p>
                    </div>
                </div>
            </div>
        </div>

    </div>

</body>
</html>
