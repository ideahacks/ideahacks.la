<!DOCTYPE HTML>
<html>
<head>
    <title>Teams - Admin</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta property="og:image" content="http://www.ideahacks.la/img/thumbnail.png">
    <meta property="og:description" content="For the ninth time, UCLA IEEE is pleased to present IDEA Hacks, the largest hardware focused hackathon on the west coast. Apply on our website today!">

    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">

    <!-- JQUERY -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <!-- SOCKETIO -->
    <script src='/socket.io/socket.io.js'></script>

    <!-- BOOTSTRAP -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

    <!-- GOOGLE FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600i,700" rel="stylesheet">

    <!-- STYLESHEETS -->
    <link rel='stylesheet' type='text/css' href='/css/style.css' />
    <link rel='stylesheet' type='text/css' href='/css/list.css' />
    <link rel='stylesheet' type='text/css' href='/css/admin-teams.css' />

    <!-- SCRIPTS -->
    <script src="/js/admin-teams.js"></script>
</head>
<body>
    <!-- NAVBAR -->
    {{> navbar }}

    <!-- HEADER -->
    <h1 class='transparent-ucla-gold'>Teams</h1>

    <!-- ADD TEAM BUTTON -->
    <div class='content-wrapper text-right'>
        <button title='Add Team'>+</button>
    </div>

    <!-- TEAM CREATION MODAL -->
    {{> teamCreationModal }}

    <!-- TEAM FILTER -->
    {{> filter }}

    <!-- TEAMS LIST -->
    <ul class='team-list filter-list content-wrapper list'>
        {{#each teams}}
            <li>
                <span class="delete-team text-right" style='display: block;'>&times;</span>
                <h2 class="ucla-blue team-name filter-key">{{ this.teamName }}</h2>
                <h1 class='text-right filter-key'>#{{ this.teamNumber }}</h1>
                <h3>Team Members</h3>
                {{#each this.members}}
                    <p class='filter-key'>{{ this.email }}</p>
                {{/each}}
                <h3>Inventory</h3>
                {{#each this.parts }}
                    <p class='filter-key'>{{ this.partName }}: {{ this.stock }}</p>
                {{/each}}
            </li>
        {{/each}}
    </ul>
</body>
</html>
